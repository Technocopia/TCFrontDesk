    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "react-bootstrap": "^1.0.0-beta.12",
    "react-helmet": "^5.2.1",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  }
